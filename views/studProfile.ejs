<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="/samStyle.css">
</head>
<body>
    <%-include("Studmenu")%>
    <div class="main-content">
        <header class="header">
            <h1>Profile</h1>
        </header>

        <div class="table-container">
            <form action="/student/profile/update" method="POST">
                
                <!-- Name Field -->
                <div class="form-group">
                    <label for="name"><strong>Name</strong></label>
                    <input type="text" id="name" name="name" value="<%= profile.name %>" class="form-control" readonly disabled>
                </div>

                <!-- Roll Number Field -->
                <div class="form-group">
                    <label for="rno"><strong>Roll Number</strong></label>
                    <input type="text" id="rno" name="rno" value="<%= profile.rno %>" class="form-control" readonly disabled>
                </div>

                <!-- Department Field -->
                <div class="form-group">
                    <label for="department"><strong>Department</strong></label>
                    <input type="text" id="department" name="department" value="<%= profile.department %>" class="form-control" readonly disabled>
                </div>

                <!-- Class Field -->
                <div class="form-group">
                    <label for="class"><strong>Class</strong></label>
                    <input type="text" id="class" name="class" value="<%= profile.class %>" class="form-control" readonly disabled>
                </div>

                <!-- Batch Field -->
                <div class="form-group">
                    <label for="batch"><strong>Batch</strong></label>
                    <input type="text" id="batch" name="batch" value="<%= profile.batch %>" class="form-control" readonly disabled>
                </div>

                <!-- GitHub Profile -->
                <div class="form-group">
                    <label for="github"><strong>GitHub Profile</strong></label>
                    <input type="url" id="github" name="github" value="<%= profile.github %>" class="form-control">
                </div>

                <!-- LeetCode Profile -->
                <div class="form-group">
                    <label for="leetcode"><strong>LeetCode Profile</strong></label>
                    <input type="url" id="leetcode" name="leetcode" value="<%= profile.leetcode %>" class="form-control">
                </div>

                <!-- Submit Button -->
                <div class="form-group">
                    <button type="submit" class="submit-btn">Update Profile</button>
                </div>
            </form>
        </div>

        <!-- Button to open change password form -->
        <div class="reset-password-container">
            <a href="/student/profile/resetPassword" class="reset-password-btn">Change Password</a>
        </div>
    </div>
</body>
</html>
