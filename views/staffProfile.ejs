<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Staff Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%-include("staffMenu")%>
  <div class="container mt-5">
    <!-- Profile Heading -->
    <div class="card">
      <div class="card-header text-center">
        <h2>Staff Profile</h2>
      </div>
      <div class="card-body">
        <!-- Staff Details -->
        <div class="mb-3">
          <strong>Name:</strong> <span><%= staff.name %></span>
        </div>
        <div class="mb-3">
          <strong>Email:</strong> <span><%= staff.email %></span>
        </div>
        <div class="mb-3">
          <strong>Role:</strong> <span><%= staff.role %></span>
        </div>
        <div class="mb-3">
          <strong>Department:</strong> <span><%= staff.department %></span>
        </div>

        <!-- Tutoring Batches as Buttons -->
        <div class="mb-3">
          <strong>Tutoring Batches:</strong>
          <div>
            <% if (staff.tutoring.length > 0) { %>
              <% staff.tutoring.forEach((batch) => { %>
                <form action="/tutorAccess" method="POST" style="display: inline-block;">
                  <input type="hidden" name="batch" value="<%= batch %>">
                  <button type="submit" class="btn btn-primary m-1"><%= batch %></button>
                </form>
              <% }); %>
            <% } else { %>
              <p>No batches assigned.</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
