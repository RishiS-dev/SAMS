<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center">Student Details</h2>
    <div class="card mt-4">
      <div class="card-body">
        <p><strong>Name:</strong> <%= student.name %></p>
        <p><strong>Roll Number:</strong> <%= student.rno %></p>
        <p><strong>Class:</strong> <%= student.class %></p>
        <p><strong>Batch:</strong> <%= student.batch %></p>
        <p><strong>Department:</strong> <%= student.department %></p>
        <p><strong>GitHub:</strong> <%= student.github || 'N/A' %></p>
        <p><strong>LeetCode:</strong> <%= student.leetcode || 'N/A' %></p>
        <p><strong>Representative:</strong> <%= student.isRep ? 'Yes' : 'No' %></p>
      </div>
    </div>

    <h3 class="mt-5">Achievements</h3>
    <% if (achievements.length > 0) { %>
      <table class="table table-striped table-bordered mt-3">
        <thead class="table-dark">
          <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Position</th>
            <th>Level</th>
            <th>Rewards</th>
            <th>Organiser</th>
            <th>Category</th>
            <th>Certificate</th>
          </tr>
        </thead>
        <tbody>
          <% achievements.forEach(a => { %>
            <tr>
              <td><%= a.name %></td>
              <td><%= a.date %></td>
              <td><%= a.position %></td>
              <td><%= a.level %></td>
              <td><%= a.rewards %></td>
              <td><%= a.organiser %></td>
              <td><%= a.category %></td>
              <td>
                <% if (a.certificate !== 'N/A') { %>
                  <a href="/<%= a.certificate %>" target="_blank" class="btn btn-primary btn-sm">View</a>
                <% } else { %>
                  N/A
                <% } %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p class="text-center mt-3">No achievements found.</p>
    <% } %>

    <a href="/staff/profile" class="btn btn-secondary mt-4">Back to Profile</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
