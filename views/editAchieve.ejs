<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Achievement</title>
    <link rel="stylesheet" href="/samStyle.css">
    <style>
        .certificate-container {
            margin: 20px 0;
            text-align: center;
        }

        .certificate-image {
            max-width: 100%;
            max-height: 300px;
            object-fit: contain;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-group input[type="file"] {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="logo-container">
        <img src="/samsSlogan.png" alt="Logo" class="logo">
    </div>

    <div class="dashboard student-dashboard">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="menu-toggle">
                <button class="menu-btn">â˜°</button>
                <div class="menu-dropdown">
                    <ul>
                        <a href="/student/profile"><li>Profile</li></a>
                        <a href="/student"><li>Dashboard</li></a>
                        <a href="/logout"><li>Logout</li></a>
                    </ul>
                </div>
            </div>

            <h3>Upcoming Events</h3>
            <div class="events-list">
                <p>No upcoming events</p>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <header class="header">
                <h1>Edit Achievement</h1>
            </header>

            <div class="table-container">
                <form action="/editAchieve/<%= achievement._id %>" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="achievementName">Achievement Name</label>
                        <input type="text" id="achievementName" name="achievementName" value="<%= achievement.achievementName %>" required>
                    </div>
                    <div class="form-group">
                        <label for="date">Date</label>
                        <input type="date" id="date" name="date" value="<%= new Date(achievement.date).toISOString().split('T')[0] %>" required>
                    </div>
                    <div class="form-group">
                        <label for="category">Category</label>
                        <input type="text" id="category" name="category" value="<%= achievement.category %>" required>
                    </div>
                    <div class="form-group">
                        <label for="position">Position</label>
                        <input type="text" id="position" name="position" value="<%= achievement.position %>" required>
                    </div>
                    <div class="form-group">
                        <label for="level">Level</label>
                        <input type="text" id="level" name="level" value="<%= achievement.level %>" required>
                    </div>
                    <div class="form-group">
                        <label for="rewards">Rewards</label>
                        <input type="text" id="rewards" name="rewards" value="<%= achievement.rewards %>" required>
                    </div>
                    <div class="form-group">
                        <label for="organiser">Organiser</label>
                        <input type="text" id="organiser" name="organiser" value="<%= achievement.organiser %>" required>
                    </div>
                    <div class="form-group">
                        <label for="certificate">Certificate</label>
                        <div class="certificate-container">
                            <% if (achievement.certificate) { %>
                                <img src="/<%= achievement.certificate.replace(/\\/g, '/') %>" alt="Certificate" class="certificate-image">

                            <% } else { %>
                                <p>No certificate available</p>
                            <% } %>
                        </div>
                        <input type="file" id="certificate" name="certificate">
                    </div>
                    <button type="submit">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
