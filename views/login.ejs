<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title%></title>
    <link rel="stylesheet" href="loginstyle.css" type="text/css" />
  </head>
  <body>
    <div class="container">
      <div class="heading">Sign In</div>
      <form class="form" action="/login" method="post">
        <input placeholder="Roll No" id="username" name="username" type="text" class="input" required=""/>
        <input placeholder="Password" id="password" name="password" type="password" class="input" required=""/>
        <input value="Sign In" type="submit" class="login-button" />
      </form>
    </div>
    <div id="errorModal" class="modal">
      <div class="modal-content">
        <p id="errorMessage"></p>
      </div>
    </div>
    <% if (typeof error!=='undefined' && error){ %>
      <script>
        document.getElementById("errorMessage").innerHTML = "<%= error %>"
        var modal = document.getElementById("errorModal")
        var span = document.getElementsByClassName("close")[0]

        modal.style.display = "block"

        window.onclick = function(event) {
          if (event.target === modal) {
            modal.style.display = "none";
          }
        }
        document.getElementById("loginForm").reset();
        
      </script>
      <% }%>
  </body>
</html>
